<!-- Featured Tags -->
<% if(theme['featured-tags']) { %>
<section>
    <!-- no hr -->
    <h5 class='text-secondary'><%= __('FEATURED TAGS') %></h5>
    <div>
        <% site.tags.map(function(tag){  %>
            <% if(tag.length > theme['featured-condition-size']) { %>
            <a class="mt-1 btn btn-outline-info" href="<%= url_for(tag.path) %>" title="<%= tag.name %>" rel="<%= tag.length %>"><%= tag.name %></a>
            <% } %>
        <% }) %>
    </div>
</section>
<% }%>
